{
	"root": true,
	"plugins": [
		"import",
		"react"
	],
	"extends": [
	  "eslint:recommended",
	  "prettier"
	],
	"rules": {
		"react/jsx-uses-vars": 2,

		"no-var": 2,
		"no-unused-vars": [
			2,
			{
				"args": "none",
				"varsIgnorePattern": "^_",
				"argsIgnorePattern": "^_",
				"ignoreRestSiblings": true
			}
		],
		"no-multi-str": 2,
		"no-prototype-builtins": 0,
		"no-duplicate-imports": 2,
		"no-self-compare": 2,
		"no-template-curly-in-string": 2,
		"no-unused-private-class-members": 2,
		"curly": 2,
		"camelcase": [
			2,
			{
				"properties": "never"
			}
		],
		"no-extend-native": 2,
		"max-depth": 2,
		"dot-notation": 2,
		"eqeqeq": 2,
		"comma-dangle": [
			2,
			"only-multiline"
		],
		"no-constant-condition": [
			2,
			{
				"checkLoops": false
			}
		]
	},
	"env": {
		"es6": true,
		"amd": true,
		"node": true,
		"browser": true
	},
	"parserOptions": {
		"ecmaVersion": 2022,
		"sourceType": "module",
		"ecmaFeatures": {
			"jsx": true
		}
	}
}
